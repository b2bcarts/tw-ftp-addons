<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para stock.view_stock_quant_tree -->
    <record id="view_stock_quant_tree_inherit_expiration" model="ir.ui.view">
        <field name="name">stock.quant.tree.inherit.expiration</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_name" optional="show"/>
                <field name="default_code" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="location_name" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="expiration_date" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <!-- Vista para stock.view_stock_quant_tree_editable -->
    <record id="view_stock_quant_tree_editable_inherit_expiration" model="ir.ui.view">
        <field name="name">stock.quant.tree.editable.inherit.expiration</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_name" optional="show"/>
                <field name="default_code" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="location_name" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="expiration_date" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>