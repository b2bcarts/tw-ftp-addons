<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FTP Configuration Form View -->
        <record id="ftp_config_view_form" model="ir.ui.view">
            <field name="name">ftp.config.form</field>
            <field name="model">ftp.config</field>
            <field name="arch" type="xml">
                <form string="FTP Configuration">
                    <header>
                        <button name="test_connection" type="object" string="Test Connection" 
                                class="btn-primary" icon="fa-plug"/>
                        <button name="process_files_now" type="object" string="Process Files Now" 
                                class="btn-secondary" icon="fa-download"/>
                        <field name="connection_status" widget="badge" 
                               decoration-success="connection_status == 'success'"
                               decoration-danger="connection_status == 'failed'"
                               decoration-muted="connection_status == 'not_tested'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                        <group>
                            <group name="connection" string="Connection Settings">
                                <field name="active"/>
                                <field name="connection_type"/>
                                <field name="host" placeholder="ftp.example.com"/>
                                <field name="port"/>
                                <field name="username"/>
                                <field name="password" password="True"/>
                                <field name="use_tls" attrs="{'invisible': [('connection_type', '=', 'sftp')]}"/>
                            </group>
                            <group name="paths" string="Path Configuration">
                                <field name="download_path" placeholder="/"/>
                                <field name="processed_path" placeholder="/files_read"/>
                            </group>
                        </group>
                        <group>
                            <group name="scheduling" string="Scheduling">
                                <field name="cron_interval"/>
                                <field name="last_sync" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- FTP Configuration Tree View -->
        <record id="ftp_config_view_tree" model="ir.ui.view">
            <field name="name">ftp.config.tree</field>
            <field name="model">ftp.config</field>
            <field name="arch" type="xml">
                <tree string="FTP Configurations">
                    <field name="name"/>
                    <field name="host"/>
                    <field name="username"/>
                    <field name="active"/>
                    <field name="connection_status" widget="badge" 
                           decoration-success="connection_status == 'success'"
                           decoration-danger="connection_status == 'failed'"
                           decoration-muted="connection_status == 'not_tested'"/>
                    <field name="last_sync"/>
                    <button name="test_connection" type="object" string="Test" 
                            icon="fa-plug" class="btn-link"/>
                    <button name="process_files_now" type="object" string="Process" 
                            icon="fa-download" class="btn-link"/>
                </tree>
            </field>
        </record>

        <!-- FTP Configuration Search View -->
        <record id="ftp_config_view_search" model="ir.ui.view">
            <field name="name">ftp.config.search</field>
            <field name="model">ftp.config</field>
            <field name="arch" type="xml">
                <search string="FTP Configurations">
                    <field name="name"/>
                    <field name="host"/>
                    <field name="username"/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="connected" string="Connected" domain="[('connection_status', '=', 'success')]"/>
                    <filter name="failed" string="Failed" domain="[('connection_status', '=', 'failed')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_host" string="Host" context="{'group_by': 'host'}"/>
                        <filter name="group_by_status" string="Status" context="{'group_by': 'connection_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- FTP Configuration Action -->
        <record id="ftp_config_action" model="ir.actions.act_window">
            <field name="name">FTP Configurations</field>
            <field name="res_model">ftp.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first FTP configuration!
                </p>
                <p>
                    Configure FTP connections to automatically download and process Excel files.
                </p>
            </field>
        </record>
    </data>
</odoo>